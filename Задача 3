#include "stdio.h"
#include "math.h"

int main() {
    
    float a;
    float b;
    float c;
    printf("Введите число a:\n");
    scanf("%f", &a);
    printf("Введите число b:\n");
    scanf("%f", &b);
    printf("Введите число c:\n");
    scanf("%f", &c);
    int n = 0;
    if (a == floor(a))
    n++;
    if (b == floor(b))
    n++;
    if (c == floor(c))
    n++;
    printf("Количество целых чисел: %d", n);
    
    return 0;
}
