#include "stdio.h"

int main() {
	float a, b;
	printf("Введите первое число:\n");
	scanf("%f", &a);
	printf("Введите второе число:\n");
	scanf("%f", &b);
	if (a < 0)
		a *= -1;
	if (b < 0)
		b *= -1;
	float ar = (a + b) / 2;
	float geom = (a * b) / 2;
	printf("Арифметическая прогрессия: %.3f\n Геометрическая прогрессия: %.3f", ar, geom);

	return 0;
}
